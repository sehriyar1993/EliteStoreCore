@model ResetPasswordViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />

    <h2>Şifrə Yeniləmə Səhifəsi</h2>
    <form method="post">
        <label>Şifrənizi Daxil edin</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />
        <label>Şifrənizi Təkrar Daxil Edin</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn btn-primary">Şifrəni Yenilə</button>
    </form>

</div>
