@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol ver</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            @Html.HiddenFor(x=>x[i].RoleId)
            @Html.HiddenFor(x=>x[i].RoleName)
            @Html.CheckBoxFor(m => m[i].RoleExist, new { @class = "form-control" })

            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-outline-primary">Dəyişiklikləri yüklə</button>
</form>

