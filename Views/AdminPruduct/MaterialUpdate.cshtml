@using Elite.EntityLayer.Concreate;
@model Material
@{
    ViewData["Title"] = "MaterialUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Materiyal Yenilə</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">İdarəetmə</a>
            </li>
            <li class="breadcrumb-item">
                Materiyallar
            </li>
            <li class="breadcrumb-item active">
                <strong>Materiyal Yenilə</strong>
            </li>
        </ol>
    </div>
</div>
<br />
<br />
<div class="ibox-content">
    @using (Html.BeginForm("MaterialUpdate", "AdminPruduct", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.MaterialId, new {@class ="form-control"})
        @Html.HiddenFor(x=>x.Status, new {@class ="form-control"})

        <br />
        <label for="validationCustom01">Adı</label>
        @Html.TextBoxFor(x=>x.MaterialName, new {@class ="form-control"})
        <br />
        <br />

        <button type="submit" id="btn1" class="btn btn-primary submit mb-4">Yenilə</button>

    }

</div>






